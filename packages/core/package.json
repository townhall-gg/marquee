{
  "name": "@townhall-gg/marquee",
  "version": "0.2.0",
  "description": "Blazing-fast marquee using Web Animations API",
  "keywords": [
    "animation",
    "marquee",
    "scroll",
    "ticker",
    "waapi",
    "web-animations-api"
  ],
  "license": "MIT",
  "author": "Townhall <hello@townhall.gg>",
  "repository": {
    "type": "git",
    "url": "https://github.com/townhall-gg/marquee"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
